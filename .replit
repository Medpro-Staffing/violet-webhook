entrypoint = "app.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

run = ["python", "-m", "gunicorn", "app:app", "--bind", "0.0.0.0:5000", "--workers", "2", "--timeout", "120"]

[auth]
pageEnabled = false

[deployment]
build = ["pip", "install", "flask", "gunicorn", "requests"]
run = ["python", "-m", "gunicorn", "app:app", "--bind", "0.0.0.0:5000", "--workers", "2", "--timeout", "120"]
deploymentTarget = "autoscale"
